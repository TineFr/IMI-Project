<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Imi.Project.Mobile.HomePage">
    
    <ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="130" />
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />

            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>


            <Frame BackgroundColor="white" Grid.Column="0" Grid.Row="0"  HeightRequest="20" >
                <Label Grid.Column="0" Grid.Row="1" Text="Home" TextColor="black" FontAttributes="Bold" HorizontalOptions="Center" VerticalOptions="End" FontSize="40"></Label>
            </Frame>
            <AbsoluteLayout Grid.Column="0" Grid.Row="0" Grid.RowSpan="3">
                <FlexLayout AbsoluteLayout.LayoutBounds="0.05, 10, 100, 100" AbsoluteLayout.LayoutFlags="XProportional" Wrap="Wrap" JustifyContent="Center">
                    <ImageButton x:Name="btnAccount" Source="accountdark.png"  Aspect="AspectFill" Padding="30" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0.05, 10, 100, 100" AbsoluteLayout.LayoutFlags="XProportional" Clicked="btnAccount_Clicked" ></ImageButton>
                <Label Text="account"></Label>
                </FlexLayout>
                <FlexLayout  AbsoluteLayout.LayoutBounds="0.95, 10, 100, 100" AbsoluteLayout.LayoutFlags="XProportional" Wrap="Wrap" JustifyContent="Center">
                    <ImageButton x:Name="btnSettings" Source="settings.png" Aspect="AspectFill" Padding="30" BackgroundColor="Transparent" AbsoluteLayout.LayoutBounds="0.95, 10, 100, 100" AbsoluteLayout.LayoutFlags="XProportional" Clicked="btnSettings_Clicked"></ImageButton>
                    <Label Text="settings"></Label>
                </FlexLayout>
            </AbsoluteLayout>
            <ScrollView  Grid.Column="0" Grid.Row="1" Grid.RowSpan="3">
                <StackLayout  Grid.Column="0" Grid.Row="1" Grid.RowSpan="2">
                    <Image x:Name="HomeLogo" Source="logolight.png" Grid.Column="0" Grid.Row="1" Margin="10" WidthRequest="20" HeightRequest="105"></Image>
                    <FlexLayout HorizontalOptions="Center"
                                Wrap="Wrap"
                                WidthRequest="1000"
                                HeightRequest="400"
                                JustifyContent="Center"
                                AlignItems="Center"
                                BackgroundColor="#F5F5F5">
                        
                        <Label Text="Did you know?"
                               FontSize="30"
                               Margin="0,10,0,0">
                        </Label>
                        <Label Text="Budgies have highly acute vision and can register over 150 mages per second... 
                               This compares to a measly 16 for humans." HorizontalTextAlignment="Center"
                               Margin="50,0,50,0"

                               HeightRequest="70">
                        </Label>
                        <Image Source="test.jpg" 
                               HeightRequest="150"
                               Margin="10">
                        </Image>


                    </FlexLayout>
                </StackLayout>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>