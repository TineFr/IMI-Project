   @{
    ViewData["Title"] = "Register";
}
 
<div class="flexbox">
        <div class="center">
            <img id="logo" src="images/budgieregister.png" alt="logo">
            <div id="divLogIn">
                <h2>Register</h2>
                <form>
                     <div>
                        <label>Name:</label><br>
                         <input type="text" placeholder="ex:Depp">
                     </div>
                     <div>
                        <label>First name:</label><br>
                         <input type="text" placeholder="ex:Johonny">
                     </div>
                    <div>
                       <label>E-mail:</label><br>
                        <input type="email" placeholder="ex:sample@gmail.com">
                    </div>
                    <div>
                        <label>Date Of Birth:</label><br>
                        <input type="date">
                     </div>
                    <div>
                        <label>Password:</label><br>
                        <input type="password" placeholder="ex:Acser!99B">
                    </div>
                    <div>
                        <label>Confirm Password:</label><br>
                        <input type="password" placeholder="ex:Acser!99B">
                    </div>
                    <button id="btnSave">Save</button>
                </form>
            </div>
        </div>
    </div>