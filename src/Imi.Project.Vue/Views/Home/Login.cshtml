@{
    ViewData["Title"] = "Login";
}

    <div class="flexContainer">
        <div>
            <div class="logoDiv">
            <img id="logo" src="images/logolight.png" alt="logo">
            </div>
            <div id="divLogIn">
                <h2>Sign in</h2>
                <form>
                    <div>
                       <label>E-mail:</label><br>
                        <input placeholder="sample@gmail.com">
                    </div>
                    <div>
                        <label>Password:</label><br>
                        <input placeholder="Acser!99B" type="password">
                    </div>
                    <button id="btnSignIn">Sign in</button>
                    
                    <div id="divSignUp"><span id="spMember">Not a member yet?</span><a id="btnSignUp" asp-controller="Home" asp-action="Register">Sign up</a></div>
                </form>
            </div>
        </div>
    </div>