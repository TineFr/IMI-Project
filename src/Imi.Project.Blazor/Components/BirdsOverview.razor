

<div class="container">
    <div class="itemscontainer">
        
        @foreach (var item in Birds)
        {
        <div class="flexitem">
            <img class="itemimage" src="@item.Image" />
            <div >
                <h3>@item.Name</h3>
                <p>@item.ScientificName</p>
                <p>@item.Cage</p>
            </div>
            <img class="genderimage" src="@SetGenderImage(item.Gender)" />
        </div>
        }
    </div>
</div>

@code {



    private string SetGenderImage(string gender)
    {
        string imageSource = "";
        imageSource = gender.ToLower() == "male" ? "images/male.png" : "images/female.png";
        return imageSource;
    }

    [Parameter]
    public IEnumerable<Bird> Birds { get; set; } = new List<Bird>();

    [Inject]
    public IBirdService birdService { get; set; }


    protected async override Task OnInitializedAsync()
    {
        Birds = await birdService.GetAllAsync();

    }
}
